{
  "name": "@agent-ops/worker",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply agent-ops-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply agent-ops-db --remote",
    "db:seed": "wrangler d1 execute agent-ops-db --local --file=scripts/seed-test-data.sql",
    "test": "vitest run"
  },
  "dependencies": {
    "@agent-ops/sdk": "workspace:*",
    "@agent-ops/channel-telegram": "workspace:*",
    "@agent-ops/channel-slack": "workspace:*",
    "@agent-ops/shared": "workspace:*",
    "@cf-wasm/resvg": "^0.3.3",
    "@cf-wasm/satori": "^0.3.3",
    "@hono/zod-validator": "^0.2.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/better-sqlite3": "^7.6.8",
    "better-sqlite3": "^11.0.0",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18",
    "wrangler": "^3.28.0"
  }
}
